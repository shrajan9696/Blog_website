            <div class="container">


        <div class="login">

              <div class="login">
                <%if(message!=""){%>
                <div class="alert alert-danger" role="alert">
                <p style="text-align:center;" ><strong><%=message%></strong> </p>
                </div>
                <%}%>
          <div class="form">
            <form class="login-form" action="/signup" method="post">
              <span class="material-icons">Register</span>
              <input type="text" placeholder="  create your username"   name="name" id="input1" onkeypress="return event.charCode != 32" required/>
              <input type="password" placeholder="crete your password" name="password" required />

              <button type="submit" name="button" >Signup</button>
            </form>
          </div>
        </div>

